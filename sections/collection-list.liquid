<div id="shopify-section-template--18137954255017__collections_list_XNbTEd" class="shopify-section">
  <style>
    * {
      margin: 0;
      padding: 0;
    }
.full-width {
    padding: 0 4rem;
    margin: 7rem auto;
}
    .collection_list_section.collection_list_template--18137954255017__collections_list_XNbTEd {
      background-color: #ffffff;
    }

    .collection_list_section .collection_heading {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .collection_heading .heading h2 {
      color: rgb(61, 66, 70);
      font-size: 30px;
      line-height: normal;
      letter-spacing: -0.5px;
      font-weight: 700;
      font-style: normal;
    }

    .collection_heading .view_all a {
      color: #3d4246;
      font-size: 16px;
      line-height: 18px;
      font-weight: 600;
      font-style: normal;
      text-decoration: none;

    }

    .collection_list_section .collection_list_main {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr;
      gap: 10px;
      padding-top: 16px;
    }

    .collection_list_main .collec_list {
      position: relative;
      display: flex;
    }

    .collec_list a {
      display: inline-flex;
      width: 100%;
    }

    .collec_list .image {
      width: 100%;
    }

    .collec_list .image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 8px;
    }

    .collec_list .shop_button {
      display: flex;
      align-items: center;
      flex-direction: column;
      position: absolute;
      bottom: 11.7%;
      left: 50%;
      transform: translate(-50%, 11.7%);
      width: 100%;
    }

    .collec_list .shop_button span {
      padding: 14px 32px;
      background-color: #F87C56;
      border-radius: 33.6px;
      color: #000000;
      font-size: 1.6rem;
      line-height: 1.3em;
      font-weight: 700;
      font-style: normal;
      text-align: center;
      transition: 0.2s ease all;
    }

    .collec_list .shop_button span:hover {
      transform: translateY(-0.25rem);
    }

    @media only screen and (max-width: 768px) {

      .collection_list_section .collection_heading {
        justify-content: center;
      }

      .collection_heading .view_all {
        display: none;
      }

      .collection_list_section .collection_list_main {
        grid-template-columns: 1fr 1fr;
        padding-top: 40px;
      }
    }

    @media only screen and (max-width: 480px) {

      .collec_list .shop_button span {
        padding: 9px 22px;
        font-size: 9.4px;
      }
    }
   
  </style>
  <div
    class="collection_list_section collection_list_template--18137954255017__collections_list_XNbTEd full-width"
    id="collection_list_template--18137954255017__collections_list_XNbTEd"
  >
    <div class="page__width">
      <div class="collection_heading" id="collection_heading_template--18137954255017__collections_list_XNbTEd">
        <div class="heading">
          <h2>{{ section.settings.title }}</h2>
        </div>
      {% if section.settings.subtitle != blank %}
        <div class="view_all">
          <a href="{{ section.settings.subtitle_linkl }}">{{ section.settings.subtitle }}</a>
        </div>
        {% endif %}
      </div>
      <div class="collection_list_main" id="collection_list_main_template--18137954255017__collections_list_XNbTEd">
       
        
         {% for block in section.blocks %}
        
        <style>
          .collection_list_hD6t7L.collec_list.bg-{{ forloop.index }} .shop_button span { background:{{ block.settings.btn_bg_color }}; color:{{ block.settings.btn_text_color }} ;font-size:16px; font-weight:700; }
          @media only screen and (max-width: 750px) { .collection_list_hD6t7L.collec_list .shop_button span {font-size: 9px; font-weight:700; }}
        </style>

        <div class="collection_list_hD6t7L collec_list bg-{{ forloop.index }} coll_item " id="collec_list_collection_list_hD6t7L">
          <a href="{{ block.settings.btn_link }}">
            <div class="image" id="collec_image_collection_list_hD6t7L">
              <img
                src="{{ block.settings.image | img_url: 'master' }}"
                alt="All Oodieâ„¢ Originals"
                height="650"
                width="450"
                loading="lazy"
              >
            </div>

            <div class="shop_button" id="collec_button_collection_list_hD6t7L">
              <span>{{ block.settings.btn_text }}</span>
            </div>
          </a>
        </div>
      {% endfor %}
   
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Collection List Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default":"Shop By Category"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Right Text",
      "default": "View All"
    },
      {
      "type": "url",
