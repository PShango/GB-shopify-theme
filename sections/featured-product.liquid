                <h4>{{ card_product.title }}  </h4>
              </a>
            </div>

               {% render 'price-card', product: card_product, price_class: '', show_compare_at_price: true %}

            
          </div>
        </div>
      {% endfor %}
    
  </div>

    
    </div>
</div>

</div>

